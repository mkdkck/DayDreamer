<!-- userBlock.handlebars -->

<!-- This partial represents a single user block -->
<div class="user-block">
    <!-- Displaying the user's avatar or profile picture -->
    <!-- The 'avatar' is a URL to the user's profile picture -->
    <img src="{{avatar}}" alt="User's avatar" class="user-avatar">

    <!-- User's username -->
    <h3>{{username}}</h3>

    <!-- User's email -->
    <p>Email: {{email}}</p>

    <!-- A link to the user's profile page -->
    <!-- The 'id' is used to refer to the specific user's ID -->
    <a href="/users/{{id}}">View Profile</a>

    <!-- Additional user information can be added here -->
</div>
