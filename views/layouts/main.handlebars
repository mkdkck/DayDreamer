<!-- main.handlebars -->

<!DOCTYPE html>
<html>
<head>
    <!-- Metadata for responsive design and character encoding -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Title of the web application -->
    <title class="h1">DayDreamer</title>

    <!-- Link to the main CSS file -->
    <link rel="stylesheet" href="/assets/css/styles.css">
    <link rel="stylesheet" href="/assets/css/jass.css">
</head>
<body id="body">
 <div class="flex-column justify-space-around">
    <header class="display-flex justify-space-between align-center p-2">
    <!-- Main navigation bar (could be a partial if complex) -->
    <nav class="nav">
        <ul>
            <li class="body"><a href="/">Home</a></li>
            {{#if login}}
                <li><a class="button" href="/dashboard">Dashboard</a></li>
                <li><a class="button" href="/logout">Logout</a></li>
            {{else}}
                <li><a class="button" href="/login">Login</a></li>
                <li><a class="button" href="/signup">Signup</a></li>
            {{/if}}
        </ul>
    </nav>
    </header>
</div>
    <!-- Main content area where other views will be injected -->
    {{{body}}}

    <!-- Link to the main JavaScript file -->
    <script src="/assets/js/main.js"></script>
</body>
</html>
